<div class="container d-flex flex-row flex-wrap">
  {{#each results}}
  <div id="{{ this.id }}" class="card m-3" style="width: 18rem">
    <img
      src="{{ this.images.1.url }}"
      class="card-img-top"
      alt="{{ this.name }}"
    />
    <div class="card-body text-center bg-dark text-light">
      <h5 class="card-title">{{ this.name }}</h5>
      <a href="/albums/{{ this.id }}" class="btn btn-danger">View Albums</a>
    </div>
  </div>
  {{/each}}
</div>
